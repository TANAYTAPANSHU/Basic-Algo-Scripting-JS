function chunkArrayInGroups(arr, size) {
  let array=[];
  for(let i=0;i<arr.length;i=i+size)
  {
  array.push(arr.slice(i,i+size));
  }


  return array;
}

chunkArrayInGroups(["a", "b", "c", "d"], 2);


